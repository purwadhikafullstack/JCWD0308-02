{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "types": ["./src/custom.d.ts"],
    "paths": {
      "@/*": ["./src/*"],
      "@models/*": ["./prisma/models/*"],
      "@seed/*": ["./prisma/seed/*"]
    }
  },
  // "include": ["src/**/*"],
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "prisma"]
}
